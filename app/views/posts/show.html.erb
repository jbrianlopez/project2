
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= @post.body %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @post.user.email %>
    </p>
    <% if @post.user == current_user %>
    <%= link_to 'Edit', edit_user_post_path(@post), class: "btn btn-default" %>
    <% else %>
    <% end %>

  </body>
</html>
